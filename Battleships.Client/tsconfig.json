{
	"compilerOptions": {
		"target": "ES2019",
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": [
			"ES2015",
			"ES2019",
			"DOM.Iterable",
			"ES2016.Array.Include",
			"ES2017.Object",
			"DOM"
		],
		"module": "commonjs",
		"removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"sourceMap": true,
		"typeRoots" : ["src/declarations.d.ts"]
	}
}
